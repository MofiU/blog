<h2>注册</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <%= f.input :email, autofocus: true, label: '账号' %>
  </div>

  <div class="field">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.input :password, autocomplete: "off", label: "密码" %>
  </div>

  <div class="field">
    <%= f.input :password_confirmation, autocomplete: "off", label: "确认密码" %>
  </div>

  <div class="actions">
    <%= f.button :submit, '注册' %>
  </div>
<% end %>

<%= render "users/shared/links" %>
