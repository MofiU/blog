<%= simple_form_for article do |f| %>
    <%= f.input :title, label: '主标题' %>
    <%= f.input :public, label: '公开', as: :boolean %>
    <%= f.input :tag_id, label: '标签', collection: tags, label_method: :name, value_method: :id, include_blank: false  %>
    <%= f.input :body, label: '正文', as: :bootsy, input_html: { rows: 40 } %>
    <%= f.button :submit, '提交', class: "pure-button pure-button-primary" %>
<% end %>